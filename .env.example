# Application Settings
APP_NAME=Mini End-to-End AI Microservice
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-powered document QA service with RAG capabilities
DEBUG=False
HOST=0.0.0.0
PORT=8070

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./test.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname
DATABASE_ECHO=True

# Redis Settings
REDIS_URL=redis://localhost:6379

# LLM Model Settings
CHAT_MODEL=HuggingFaceH4/zephyr-7b-beta
LLM_TEMPERATURE=0.7
LLM_MAX_NEW_TOKENS=512
LLM_REPETITION_PENALTY=1.03

# Embedding Model Settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_NORMALIZE=False

# Vector Store Settings
VECTOR_STORE_PATH=./chroma_db
VECTOR_STORE_COLLECTION=documents

# File Upload Settings
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
